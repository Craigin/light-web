<script>

    $(function () {

        if($(window).width()<=768){
            $("#con1").css("width",$(window).width()-64).css("height",$(this).width()*9/16);
        }
        $('.sewise-video').each(function (i,n) {
            var playurl = $(n).attr('data-url') || '#';
            var config={
                elid:$(n),
                autostart:false,
                url:playurl,
                skin:"vodLight"
            };
            player = new Sewise.SewisePlayer(config);
            player.startup();
            $(n).data('sewise-player',player);

        });
    });


</script>
