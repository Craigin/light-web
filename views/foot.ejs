<!--模态框-->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" >
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="gridModalLabel"></h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-theme btn-save">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            </div>
        </div>
    </div>
</div>

<!--资源库-->
<div class="modal fade bs-example-modal Warehouse" id="img-selector-dlg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" style="z-index: 9999;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" >选择图片</h4>
            </div>
            <div class="modal-body page-wrapper">
                <aside class="page-sidebar col-md-2 col-sm-4 affix-top">
                    <section class="widget">
                        <ul class="nav">
                            <%%categorys.forEach(function(category,i){%>
                            <li dataindex="<%%=i%>" _id="<%%=category.id%>" ><a  href="#<%%=category.id%>" field="name"><%%=category.name%></a></li>
                            <%%})%>
                        </ul>
                    </section><!--//widget-->
                </aside><!--//page-sidebar-->
                <div  class="Warehouse-wrapper col-md-10 col-sm-8 image-list">
                    <%%images.forEach(function(image,i){%>

                    <div dataindex=" <%%=image.dataIndex%>" _id="<%%=image._id%>" class="Warehouse-item col-xs-6 col-sm-3">

                        <%%if(image.url){%><div class="modal-img-box"><img src="<%%=image.url%>"></div><%%}%>
                        <p><%%=image.size%></p>


                    </div>
                    <%%})%>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-8">
                        <div class="upload-outer"><input type="file" class="nice-upload" upload-url="/upload1" name="pic" accept="image/*"/></div>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-theme">确定</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

