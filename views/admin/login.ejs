					<fieldset>	
					
						<section>
							<label class="label">用户名</label>
							<label class="input">
								<i class="icon-append fa fa-envelope"></i>
								<input type="text" class="user">
								<span class="tooltip tooltip-top-right">请输入用户名</span>
							</label>
						</section>
						
						<section>
							<label class="label">密码</label>
							<label class="input">
								<i class="icon-append fa fa-lock"></i>
								<input type="password" class="password" >
								<b class="tooltip tooltip-top-right">请输入密码</b>
							</label>
							<!-- <label class="checkbox"><input type="checkbox" name="checkbox-inline" checked><i></i>记住我</label> -->
						</section>

					</fieldset>

					<footer>
						<button type="button" class="btn btn-primary pull-right">登录</button>
						<!--<button type="submit" class="btn btn-primary pull-right">登录</button>-->
