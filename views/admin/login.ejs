		</div>

		<!-- JAVASCRIPT FILES -->
		<script type="text/javascript">var plugin_path = '/admin/plugins/';</script>
		<script type="text/javascript" src="/admin/plugins/jquery/jquery-2.1.4.min.js"></script>
		<script type="text/javascript" src="/admin/js/app.js"></script>
		<script>
			$('.btn-primary').click(function(){
				$.post('/admin/login',{username:$('.user').val(),password:$('.password').val()},function(data){
					if(data=='success'){
						window.location.href='/admin/cms';
					}else{
						_toastr("用户名或账号不正确，或者该用户已被禁用","top-right","error",false);
					}
				})
			})
			$("form input").keydown(function(event){
				if(event.keyCode==13){
					event.stopPropagation();
					event.preventDefault();
					$('.btn-primary').click();
				}
			})
		</script>
